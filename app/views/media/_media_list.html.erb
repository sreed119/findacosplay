<div class="card">
    <div class="card-content">
        <h4>Media</h4>
        <table class="striped-highlight table">
            <thead>
                <th>Name</th>
                <th>Media Type</th>
                <% if logged_in? %>
                    <th>Options</th>
                <% end %>
            </thead>
            <% for medium in @media%>
                <tr>
                    <td><%= link_to "#{medium.name}", medium_path(medium) %></td>
                    <td><%= medium.media_type.capitalize %></td>
                    <% if logged_in? %>
                        <td>
                        <%= link_to edit_medium_path(medium) do %>
                            <i class="material-icons">edit</i>
                        <% end %>
                        </td>
                    <% end %>
                </tr>
            <% end %>
        </table>
        <br />
        <%# Paginate if turns out to work correctly %>
    </div>
</div>
