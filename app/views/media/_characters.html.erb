<% if @characters.any? %>
    <h4>Characters</h4>
    <% for character in @characters %>
    <div class="col s4">
        <div class="card small">
            <div class="card-image list_card">
                <% if character.image.attached? %>
                    <%= image_tag character.image, class: "list_img" %>
                <% else %>
                    <%= image_tag "photo_placeholder.jpg", class: "list_img" %>
                <% end %>
            </div>
            <div class="card-content">
                <span class="card-title"><%= link_to "#{character.name}", character_path(character) %></span>
            </div>
        </div>
    </div>
    <% end %>
<% end %>
