<% if @user_media.any? %>
    <h4>Saved Media</h4>
    <% for user_medium in @user_media %>
        <div class="col s4">
            <div class="card small">
                <div class="card-image list_card">
                    <% if user_medium.medium.image.attached? %>
                        <%= image_tag user_medium.medium.image, class: "list_img" %>
                    <% else %>
                        <%= image_tag "photo_placeholder.jpg", class: "list_img" %>
                    <% end %>
                    <%= button_to user_medium_path(user_medium), method: :delete, data: { turbo_confirm: 'Are you sure you wish to delete this information?' }, class: "btn-floating halfway-fab waves-effect waves-light red" do %>
                        <i class="material-icons trash_icon">delete</i>
                    <% end %>
                </div>
                <div class="card-content">
                    <span><%= link_to "#{user_medium.medium.name}", medium_path(user_medium.medium) %></span>
                    <p><%= user_medium.medium.media_type.capitalize %></p>
                </div>
            </div>
        </div>
    <% end %>
<% else %>
    <h4>You have no saved media yet! :0</h4>
<% end %>
