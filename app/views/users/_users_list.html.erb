<div class="card">
    <div class="card-content">
        <h4>All Users</h4>
        <ul class="collection">
            <% for user in @users %>
                <% if logged_in? && user.username == current_user.username %>
                    <li class="collection-item active blue lighten-1">
                        <div>
                            <%= link_to "#{user.username} (#{user.email})", user_path(user), class: "white-text" %>
                            <i class="material-icons secondary-content">star</i>
                        </div>
                    </li>
                <% else %>
                    <li class="collection-item">
                        <%= link_to "#{user.username} (#{user.email})", user_path(user) %>
                    </li>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>
