<div class="card">
    <div class="card-content">
        <h4>Characters</h4>
        <table class="striped-highlight table">
            <thead>
                <th>Name</th>
                <th>Media</th>
                <% if logged_in? %>
                    <th>Options</th>
                <% end %>
            </thead>
            <% for character in @characters%>
                <tr>
                    <td><%= link_to "#{character.name}", character_path(character) %></td>
                    <td><%= link_to "#{character.medium.name}", medium_path(character.medium) %></td>
                    <% if logged_in? %>
                        <td>
                        <%= link_to edit_character_path(character) do %>
                            <i class="material-icons">edit</i>
                        <% end %>
                        </td>
                    <% end %>
                </tr>
            <% end %>
        </table>
        <br />
        <%# Paginate if turns out to work correctly %>
    </div>
</div>
