<div class="card">
    <div class="card-content">
        <h3><%= @character.name %> (<%= link_to "#{@character.medium.name}", medium_path(@character.medium) %>)</h3><br />
        <b>Hair Length: <%= @character.hair_length %></b><br />
        <b>Hair Color: <%= @character.hair_color %></b><br />
        <b>Eye Color: <%= @character.eye_color %></b><br />

        <b><%= link_to 'Save This Character', new_user_character_path(character_id: @character.id) %></b><br />
    </div>
</div>
<%= render partial: "saved_items", locals: { added_items: @added_items } %>
