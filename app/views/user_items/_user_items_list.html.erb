<% if @user_items.any? %>
    <h4>Saved Items</h4>
    <% for user_item in @user_items %>
        <div class="col s4">
            <div class="card small">
                <div class="card-image list_card">
                    <% if user_item.item.image.attached? %>
                        <%= image_tag user_item.item.image, class: "list_img" %>
                    <% else %>
                        <%= image_tag "photo_placeholder.jpg", class: "list_img" %>
                    <% end %>
                    <%= button_to user_item_path(user_item), method: :delete, data: { turbo_confirm: 'Are you sure you wish to delete this information?' }, class: "btn-floating halfway-fab waves-effect waves-light red" do %>
                            <i class="material-icons trash_icon">delete</i>
                    <% end %>
                </div>
                <div class="card-content">
                    <span class="card-title"><%= link_to "#{user_item.item.name}", item_path(user_item.item) %></span>
                    <p><%= link_to "#{user_item.item.store} (#{user_item.item.price})", user_item.item.item_link, target: "_blank" %></p>
                </div>
            </div>
        </div>
    <% end %>
<% else %>
    <h4>You have no saved items yet! :0</h4>
<% end %>
