<% if @user_item && @user_item.id && @user_item.item_id %>
    <%# updated a save only shows that item %>
    <%= f.input :item_id, collection: [[@user_item.item.name, @user_item.item.id]], include_blank: false %>
<% elsif @user_item && @user_item.item_id %>
    <%# new save with set params from the previous page has option preselected %>
    <%= f.input :item_id, collection: get_unsaved_items, include_blank: false, selected: @user_item.item_id %>
<% else %>
    <%# new save with no set params has nothing preselected %>
    <%= f.input :item_id, collection: get_unsaved_items, include_blank: true %>
<% end %>
<%= f.input :purchased, label_html: { class: 'active' } %>
<% if @user_item && @user_item.purchased %>
    <%= f.input :rating, collection: UserItem::RATINGS, include_blank: true %>
    <%= f.input :review, label_html: { class: 'active' } %>
<% end %>
