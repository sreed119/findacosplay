<div class="row">
  <div class="col s8">
    <!-- primary partial gets displayed here in main div -->
    <%= render partial: "#{primary}" %>
    <!-- sometimes we want another partial below -->
    <% unless secondary.nil? %>
      <p>&nbsp;</p>
      <%= render partial: "#{secondary}" %>
    <% end %>
    
  </div>
  <div class="col s1">
    <!-- space -->
    <p>&nbsp;</p>
  </div>
  <div class="col s3">
    <!-- render the sidebar, if it exists -->
    <%= render partial: "#{sidebar}" unless sidebar.blank? %>
  </div>
</div>

<!-- Add a button for new instances of object -->
<% if logged_in? and not_save %>
  <%= render :partial => 'partials/add_new_object', locals: {model_name: model_name} %>
<% end %>
